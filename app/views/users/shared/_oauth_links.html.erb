<div class="space-y-4 mt-6">
  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "w-full flex justify-center py-2 px-4 rounded-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "w-full flex justify-center py-2 px-4 rounded-md text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <div class="text-center text-sm font-medium text-gray-300">or you can <%= controller_name == "registrations" ? "sign up" : "log in" %> with</div>
    <div class="flex justify-center space-x-4 mt-2">
      <% resource_class.omniauth_providers.each do |provider| %>
        <%= button_to omniauth_authorize_path(resource_name, provider), data: { turbo: false }, method: :post, class: "flex items-center justify-center p-2 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
          <%= image_tag "oauth/#{format_provider(provider.to_s)}.svg", alt: "#{provider} logo", class: "h-10 w-10" %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
