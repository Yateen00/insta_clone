<h2 class="text-2xl font-bold mb-4">Confirm Profile</h2>

<%= form_for(@profile, url: update_oauth_profile_path(provider: params[:provider]), html: { class: "space-y-6" }) do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative">
      <h2 class="font-bold mb-2"><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>
      <ul class="list-disc list-inside">
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :username, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :username, class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="actions">
    <%= f.submit "Confirm Profile", class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
  </div>
<% end %>